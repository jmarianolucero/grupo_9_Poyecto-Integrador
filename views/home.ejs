<!DOCTYPE html>
<html lang="EN">
    <head>
        <%- include('./partials/head')%>    
        <title>Music box</title>
        <link rel="stylesheet" href="/css/styles.css">
        
    </head>
    <body>
        <%- include('./partials/header')%>
        <main>
            <div class="carrousel">
                <a href=""><i class="fas fa-arrow-left"></i></a>
                <div><img src="/images/imagen1-home-musicBox.png" alt=""></div>
                <a href=""><i class="fas fa-arrow-right"></i></a>
            </div>
            <div class="benefits">
                <p><i class="fas fa-award"></i> Garantía Oficial</p>
                <p><i class="fas fa-truck"></i> Envío gratis desde $10.000</p>
                <p><i class="far fa-credit-card"></i> 3, 6 y 12 cuotas sin interés</p>
            </div>
            <div class="categorias">
                <div class="button">
                    <a href="#">
                        <i class="fas fa-guitar"></i>
                        <p>Cuerda</p>
                    </a>
                </div>
                <div class="button">
                    <a href="#">
                        <i class="fas fa-wind"></i>
                        <p>Viento</p>
                    </a>
                </div>
                <div class="button">
                    <a href="#">
                        <i class="fas fa-drum"></i>
                        <p>Percusión</p>
                    </a>
                </div>
                <div class="button">
                    <a href="#">
                        <i class="fas fa-headphones-alt"></i>
                        <p>Sonido</p>
                    </a>
                </div>
                <div class="button">
                    <a href="#">
                        <i class="fas fa-microphone-alt"></i>
                        <p>Accesorios</p>
                    </a>
                </div>
                <div class="button">
                    <a href="#">
                        <i class="fas fa-sliders-h"></i>
                        <p>Taller</p>
                    </a>
                </div>
            </div>
            <section>
                <h2 class="destacados">Productos Destacados</h2>
                <section >
                    
                        <div class="productos">
                    <% products.forEach(product => { %>
                        <article class="listaDeProductos">
                        
                        <a href="/products/<%= product.id %>">
                            
                                <div class='producto'>
                                    <img src="/images/products/<%= product.image %>" alt="imagen de <%= product.name %>" class="imagen-producto">
                                    <div class="mainArticle">
                                        <p class="name"><%= product.name %></p>
                                        <p class="price"><%= product.price %></p>
                                     </div>
                                </div>
                                
                            
                        </a>
                        </article>
                    
                    <% }) %>
                   </div>
    
                </section>
    
            </section>
        </main>
        <%- include('./partials/footer')%>
       
    </body>


</html>