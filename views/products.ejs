<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')%>
    <title>Todos nuestros productos</title>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('./partials/header')%>
    <main>
        <section>
            <section class="productos">
                <h3>Nuestos Productos</h3>
                <div class="listaDeProductos">
                    <% for (i = 0 ; i < products.length ; i++) { %>
                    <a href="/products/<%= products[i].id %>">
                        <article>
                            <img src="/images/products/<%= products[i].image %>" alt="imagen de <%= products[i].name %>" class="">
                            <div class="mainArticle">
                                <p class="name"><%= products[i].name %></p>
                                <p class="category"><%= products[i].category %></p>
                                <p class="price"><%= products[i].price %></p>
                                <h4 class="description"><%= products[i].description %></h4>
                            </div>
                        </article>
                    </a>
                    <% } %>
                </div>



            </section>

        </section>
    </main>
    <%- include('./partials/footer')%>
    
</body>
</html>